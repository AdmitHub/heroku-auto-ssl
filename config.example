# Dehydrated config
# -- -- Type of challenge used to verify domain ownership, `dns-01` challenges
#       require the owner of the domain to add a DNS entry.
export CHALLENGETYPE="dns-01"
# -- -- Domain to store SSL certificates in
export CERTDIR="${BASEDIR}/certs"
# -- -- Hook to run throughout lifecycle of proccess
export HOOK="dehydrated/hooks/cloudflare/hook.py"
# -- -- Email used during certficate registration
export CONTACT_EMAIL="andrew@admithub.com"

# Heroku Auto SSL config
# List of Heroku apps to update
export HEROKU_AUTO_SSL_APPS="[\"aboutadmissions\", \"chooser-admin\", \"chooser-prod\", \"sms-load-balancer\", \"project-phoenix-prod\"]"

# Cloudflare Hook config
# -- -- Cloudflare account email address
export CF_EMAIL="andrew@admithub.com"
# -- -- Cloudflare account Global API Key
export CF_KEY=""
